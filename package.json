{
	"name": "companion-module-bitfocus-snapshot",
	"version": "0.0.2",
	"api_version": "1.0.0",
	"description": "Bitfocus Snapshot module for Bitfocus Companion",
	"keywords": [
		"Video",
		"Software",
		"ATEM"
	],
	"manufacturer": "Bitfocus",
	"product": "Snapshot",
	"shortname": "snapshot",
	"homepage": "https://github.com/bitfocus/companion-module-bitfocus-snapshot#readme",
	"main": "dist/index.js",
	"scripts": {
		"build": "npx rimraf dist && npx typescript@~4.2 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts --ext .js --ignore-pattern dist",
		"lint-fix": "yarn lint --fix",
		"postinstall": "yarn build"
	},
	"author": "William Viker <william@bitfocus.io>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint-fix"
		]
	},
	"engines": {
		"node": "^12.14 || 14"
	},
	"dependencies": {
		"@types/debug": "^4.1.5",
		"@types/node": "^12.20.13",
		"md5-typescript": "^1.0.5",
		"socket.io-client": "^4.1.2"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.4.1",
		"rimraf": "^3.0.2",
		"typescript": "~4.2"
	}
}
