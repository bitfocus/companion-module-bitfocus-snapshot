{
	"name": "bitfocus-snapshot",
	"version": "0.0.6",
	"api_version": "1.0.0",
	"description": "Bitfocus Snapshot module for Bitfocus Companion",
	"keywords": [
		"Video",
		"Software",
		"ATEM"
	],
	"manufacturer": "Bitfocus",
	"product": "Snapshot",
	"shortname": "snapshot",
	"homepage": "https://github.com/bitfocus/companion-module-bitfocus-snapshot#readme",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"build": "npx rimraf dist && npx typescript@~4.2 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"postinstall": "yarn build"
	},
	"author": "William Viker <william@bitfocus.io>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^14 || ^16"
	},
	"dependencies": {
		"@types/debug": "^4.1.7",
		"@types/node": "^14.18.22",
		"md5-typescript": "^1.0.5",
		"socket.io-client": "^4.5.1"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "~2.0",
		"typescript": "~4.5"
	},
	"bugs": {
		"url": "https://github.com/bitfocus/companion-module-bitfocus-snapshot/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-bitfocus-snapshot.git"
	}
}
